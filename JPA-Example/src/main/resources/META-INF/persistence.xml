<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="SpellCheck-Example" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/MariaDBDS</jta-data-source>
        <class>lu.uni.jakartaee.jpa.SpellError</class>
        <class>lu.uni.jakartaee.jpa.SpellStatistics</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
    </persistence-unit>
</persistence>